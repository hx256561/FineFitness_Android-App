<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_4">

    <Button
        android:id="@+id/answer_question"
        android:paddingTop="120dp"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_shape1"
        android:text="Answer"
        android:textColor="@color/white"
        android:drawablePadding="-70dp"
        android:drawableTop="@drawable/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/to_coach_chatroom"
        android:paddingTop="45dp"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_shape1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Chatroom"
        android:textColor="@color/white"
        android:drawableTop="@drawable/bell"
        android:drawablePadding="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_question"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>